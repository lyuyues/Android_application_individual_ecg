<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#4169e1" />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
        </shape>
    </item>
    
    <item>
        <shape
            android:shape="rectangle" >
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <solid
                android:color="#00000000" />
        </shape>
    </item>

</selector>